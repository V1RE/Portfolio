---
layout: page
---


<div class="card">
  <a class="image" href="{{image}}">
    <img src="{{image}}" alt="{{title}}">
  </a>
  <div class="introcontainer">
    <p>
      {{description}}
    </p>
    <div class="iconwrapper">
      <div class="left">
        {{#if demo}}
        <a href="{{demo}}" title="Demo" target="_blank"><i data-feather="external-link"></i></a>
        {{/if}}
        {{#if code}}
        <a href="{{code}}" title="Code" target="_blank"><i data-feather="code"></i></a>
        {{/if}}
      </div>
      <div class="right">
        {{#each uses}}
        <div class="bgicon" title="{{this}}" style="background-image: url('/icons/{{lowercase this}}.svg');"></div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{{ content }}}

<div class="techcontainer">
  <h3 class="techtitle">Technologies used:</h3>
  <ul class="techstack">
    {{#each uses}}
    <li>
      <div class="bgicon" title="{{this}}" style="background-image: url('/icons/{{lowercase this}}.svg');"></div>
      {{this}}
    </li>
    {{/each}}
  </ul>
</div>
