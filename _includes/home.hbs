---
layout: main
---

<main>
  <section class="fullheight" id="intro">
    <div class="card">
      <div class="profilepicture"></div>
      <div class="content">
        <h1 class="greeting">Hi! I'm <span class="name">Niels</span>,</h1>
        <div class="description">{{{content}}}</div>
        <div class="iconholder">
          <a href="mailto:niels.mentink@gmail.com" title="E-mail" target="_blank"><i data-feather="mail"></i></a>
          <a href="https://wa.me/31627035882" title="Whatsapp" target="_blank"><i data-feather="message-square"></i></a>
          <a href="https://github.com/V1RE/" title="Github" target="_blank"><i data-feather="github"></i></a>
        </div>
      </div>
    </div>

    <a href="#projects" class="scrollicon"><i data-feather="chevron-down"></i></a>
  </section>

  <div id="projects" class="scrollanchor"></div>

  <header>
    <div class="leftpart">
      <a href="/">
        <span class="logo">Niels<br>Mentink</span>
        <div class="line"></div>
      </a>
    </div>
    <nav class="rightpart">
      <ul class="menuitems">
        <li><a href="/#projects">Projects</a></li>
        <li><a href="/contact">Contact</a></li>
        <li>
          <label id="theme-switch" class="theme-switch" for="checkbox_theme">
            <input type="checkbox" id="checkbox_theme">
            <i data-feather="moon" class="lightthemeicon"></i>
            <i data-feather="sun" class="darkthemeicon"></i>
          </label>
        </li>
      </ul>
    </nav>
  </header>

  <section class="fullheight" id="projectswrapper">
    <div class="projectintro">
      <h2><i data-feather="folder"></i>Projects</h2>
    </div>
    <div class="projectcontainer">
      {{#each collections.projects}}
      <div class="project">
        <article class="card">
          <a href="{{this.url}}">
            <h3 class="projecttitle">{{this.data.title}}</h3>
          </a>

          <p class="content">
            {{{this.data.description}}}
          </p>

          <div class="linkwrapper">
            {{#if this.data.demo}}
            <a href="{{this.data.demo}}" title="Demo" target="_blank"><i data-feather="globe"></i></a>
            {{/if}}
            {{#if this.data.code}}
            <a href="{{this.data.code}}" title="Code" target="_blank"><i data-feather="code"></i></a>
            {{/if}}
          </div>
        </article>
      </div>
      {{/each}}
    </div>
  </section>
</main>

<footer>
  <a href="https://niels.ment.ink" class="copyright">&copy;<span class="curyear">2020</span> Niels Mentink</a>
</footer>