{
  "extends": "@2digits/tsconfig/tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.mjs", ".next/types/**/*.ts"],
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src",
    "module": "esnext",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false
  },
  "exclude": ["node_modules"]
}
