{
  "extends": "@2digits/tsconfig/tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "postcss.config.js"
  ],
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src",
    "module": "esnext",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false
  },
  "exclude": ["node_modules"]
}
